<div class="container">
  <div class="row">
    <div class="col-md-4">
      <img class="card-img-top" src="{{image_url}}" alt="Cerveza" style="width: 150px">
    </div>
    <div class="col-md-8">
      <h2>{{name}}</h2>
      <p>{{tagline}}</p>
      <p>{{description}}</p>
      <h3>Food Pairing</h3>
      <ul>
        {{#each food_pairing}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <p><b>Brewers tips:</b> {{brewers_tips}}</p>
    </div>
  </div>
</div>